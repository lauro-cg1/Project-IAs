  function toggleHalloweenMode() {
    if (isOpen) return;
    
    isHalloweenMode = !isHalloweenMode;
    const toggleImg = toggle.querySelector('img');
    
    if (isHalloweenMode) {
      toggleImg.style.opacity = '0';
      setTimeout(() => {
        toggleImg.src = halloweenImage;
        toggleImg.classList.remove('normal-logo');
        toggleImg.classList.add('halloween-logo');
        toggle.classList.add('halloween-mode');
        toggleImg.style.opacity = '1';
      }, 250);
    } else {
      toggleImg.style.opacity = '0';
      setTimeout(() => {
        toggle.classList.remove('halloween-mode');
        toggleImg.src = normalImage;
        toggleImg.classList.remove('halloween-logo');
        toggleImg.classList.add('normal-logo');
        toggleImg.style.opacity = '1';
      }, 250);
    }
  }
  
