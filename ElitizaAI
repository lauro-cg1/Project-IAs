  function getUsernameFromForum() {
    try {
      if (window._userdata && window._userdata.username) {
        return window._userdata.username;
      }
      if (window._userdata && window._userdata["username"]) {
        return window._userdata["username"];
      }
      if (window.userdata && window.userdata.username) {
        return window.userdata.username;
      }
      if (window.username) {
        return window.username;
      }
      if (window.currentUser) {
        return window.currentUser;
      }
      const usernameSelectors = [
        '.username',
        '[data-username]',
        '.user-name',
        '#username',
        '.navbar .username',
        '.header-username',
        '.profile-username',
        'a[href*="/u/"]',
        '.memberlist a',
        '.postprofile .username'
      ];
      for (let selector of usernameSelectors) {
        const element = document.querySelector(selector);
        if (element) {
          if (element.getAttribute('data-username')) {
            return element.getAttribute('data-username').trim();
          }
          if (element.textContent && element.textContent.trim()) {
            const username = element.textContent.trim();
            if (username.length > 0 && username.length < 50 && !/^\s*$/.test(username)) {
              return username;
            }
          }
          if (element.href) {
            const match = element.href.match(/\/u\/([A-Za-z0-9_-]+)/);
            if (match && match[1]) {
              return match[1];
            }
          }
        }
      }
      const bodyText = document.body.innerHTML;
      const patterns = [
        /data-username=["']([A-Za-z0-9_-]+)["']/i,
        /username:\s*["']([A-Za-z0-9_-]+)["']/i,
        /user:\s*["']([A-Za-z0-9_-]+)["']/i,
        /"username":\s*"([A-Za-z0-9_-]+)"/i
      ];

      for (let pattern of patterns) {
        const match = bodyText.match(pattern);
        if (match && match[1]) {
          return match[1].trim();
        }
      }
      const cookies = document.cookie.split(';');
      for (let cookie of cookies) {
        const [name, value] = cookie.split('=').map(c => c.trim());
        if (name === 'username' || name === 'user' || name === 'currentUser') {
          if (value && value !== 'null' && value !== 'undefined') {
            return decodeURIComponent(value);
          }
        }
      }
      if (window.localStorage) {
        const storageKeys = ['username', 'user', 'currentUser', 'loggedUser'];
        for (let key of storageKeys) {
          const value = localStorage.getItem(key);
          if (value && value !== 'null' && value !== 'undefined') {
            return value;
          }
        }
      }
      return null;
    } catch (error) {
      return null;
    }
  }
  
  currentUsername = getUsernameFromForum();
  
  function updateWelcomeMessage() {
    const welcomeElement = document.getElementById('elitizaai-welcome-message');
    if (welcomeElement) {
      if (currentUsername) {
        welcomeElement.textContent = `Ol√° ${currentUsername}! üëã Sou a ElitizaAI, a Assistente Inteligente da subcompanhia Centro de Elitiza√ß√£o Militar! Como posso te ajudar?`;
      } else {
        welcomeElement.textContent = 'Ol√°! üëã Sou a ElitizaAI, a Assistente Inteligente da subcompanhia Centro de Elitiza√ß√£o Militar! Como posso te ajudar?';
      }
    }
  }
  
  updateWelcomeMessage();
  
  function processMarkdown(text) {
    text = text.replace(/\n\n+/g, '\n\n');
    
    const lines = text.split('\n');
    const processed = [];
    let inSubTopicContext = false;
    
    for (let i = 0; i < lines.length; i++) {
      const line = lines[i];
      const trimmed = line.trim();
      
      if (/^\* \*\*([^*]+)\*\*:\s*(.*)$/.test(trimmed)) {
        const match = trimmed.match(/^\* \*\*([^*]+)\*\*:\s*(.*)$/);
        const title = match[1];
        const content = match[2].trim();
        
        const nextLine = i + 1 < lines.length ? lines[i + 1].trim() : '';
        if (nextLine.startsWith('* **') && nextLine.includes(':')) {
          inSubTopicContext = true;
        } else {
          inSubTopicContext = false;
        }
        
        if (content && !content.endsWith(':')) {
          processed.push(`<div style="margin-top: 12px; margin-bottom: 4px;">‚Ä¢ <strong>${title}:</strong> ${content}</div>`);
        } else {
          processed.push(`<div style="margin-top: 12px; margin-bottom: 4px;">‚Ä¢ <strong>${title}:</strong></div>`);
          if (content) processed.push(content);
        }
      }
      else if (inSubTopicContext && /^\* \*\*([^*]+)\*\*:\s*(.*)$/.test(trimmed)) {
        const match = trimmed.match(/^\* \*\*([^*]+)\*\*:\s*(.*)$/);
        const title = match[1];
        const content = match[2].trim();
        
        if (content) {
          processed.push(`<div style="margin-left: 20px; margin-top: 8px;"><strong>${title}:</strong> ${content}</div>`);
        } else {
          processed.push(`<div style="margin-left: 20px; margin-top: 8px;"><strong>${title}:</strong></div>`);
        }
      }
      else if (/^\* \*\*([^*:]+)\*\*\s+(.+)$/.test(trimmed)) {
        const match = trimmed.match(/^\* \*\*([^*:]+)\*\*\s+(.+)$/);
        const title = match[1];
        const content = match[2];
        processed.push(`<div style="margin-left: 40px; margin-top: 4px;">‚Ä¢ <strong>${title}</strong> ${content}</div>`);
      }
      else if (/^\* (.+)$/.test(trimmed)) {
        const match = trimmed.match(/^\* (.+)$/);
        processed.push(`<div style="margin-top: 4px;">‚Ä¢ ${match[1]}</div>`);
      }
      else if (trimmed === '') {
        processed.push('<br>');
      }
      else if (trimmed) {
        processed.push(trimmed);
      }
    }
    
    text = processed.join('');
    
    text = text.replace(/\*\*([^*]+)\*\*/g, '<strong>$1</strong>');
    
    text = text.replace(/que incluem:<br>/gi, 'que incluem: ');
    
    text = text.replace(/(<br>){3,}/g, '<br><br>');
    
    return text;
  }
  
  function processLinks(text) {
    text = text.replace(/(https?:\/\/[^\s<>"{}|\\^`[\]]+)/gi, function(match) {
      let cleanUrl = match.replace(/[.,;:!?)\]]+$/, '');
      let punctuation = match.substring(cleanUrl.length);
      return `<a href="${cleanUrl}" target="_blank" rel="noopener noreferrer" style="
        color: #FF8C00; 
        font-weight: 600; 
        text-decoration: none; 
        padding: 4px 8px; 
        background: linear-gradient(135deg, rgba(255, 149, 0, 0.15), rgba(255, 193, 0, 0.15)); 
        border-radius: 8px; 
        border: 1px solid rgba(255, 149, 0, 0.3);
        transition: all 0.3s ease;
        display: inline-block;
        margin: 2px;
      " onmouseover="this.style.background='linear-gradient(135deg, rgba(255, 149, 0, 0.25), rgba(255, 193, 0, 0.25))'; this.style.transform='translateY(-1px)'; this.style.boxShadow='0 4px 12px rgba(255, 149, 0, 0.2)';" onmouseout="this.style.background='linear-gradient(135deg, rgba(255, 149, 0, 0.15), rgba(255, 193, 0, 0.15))'; this.style.transform='translateY(0)'; this.style.boxShadow='none';">üîó Clique Aqui</a>${punctuation}`;
    });
    text = text.replace(/(?<!href="|https?:\/\/)(www\.[^\s<>"{}|\\^`[\]]+)/gi, function(match) {
      let cleanUrl = match.replace(/[.,;:!?)\]]+$/, '');
      let punctuation = match.substring(cleanUrl.length);
      return `<a href="http:
        color: #FF8C00; 
        font-weight: 600; 
        text-decoration: none; 
        padding: 4px 8px; 
        background: linear-gradient(135deg, rgba(255, 149, 0, 0.15), rgba(255, 193, 0, 0.15)); 
        border-radius: 8px; 
        border: 1px solid rgba(255, 149, 0, 0.3);
        transition: all 0.3s ease;
        display: inline-block;
        margin: 2px;
      " onmouseover="this.style.background='linear-gradient(135deg, rgba(255, 149, 0, 0.25), rgba(255, 193, 0, 0.25))'; this.style.transform='translateY(-1px)'; this.style.boxShadow='0 4px 12px rgba(255, 149, 0, 0.2)';" onmouseout="this.style.background='linear-gradient(135deg, rgba(255, 149, 0, 0.15), rgba(255, 193, 0, 0.15))'; this.style.transform='translateY(0)'; this.style.boxShadow='none';">üîó Clique Aqui</a>${punctuation}`;
    });
    return text;
  }
  
  function adjustTextareaHeight() {
    input.style.height = 'auto';
    input.style.height = Math.min(input.scrollHeight, 100) + 'px';
  }
  
  function addMessage(text, isUser = false) {
    const messageDiv = document.createElement('div');
    messageDiv.className = `elitizaai-message ${isUser ? 'user' : 'ai'}`;
    
    const contentDiv = document.createElement('div');
    contentDiv.className = 'elitizaai-message-content';
    
    if (isUser) {
      contentDiv.textContent = text;
    } else {
      text = processMarkdown(text);
      text = processLinks(text);
      contentDiv.innerHTML = text.replace(/\n/g, '<br>');
    }
    
    messageDiv.appendChild(contentDiv);
    
    if (typingIndicator) {
      typingIndicator.style.display = 'none';
    }
    
    messagesDiv.appendChild(messageDiv);
    messagesDiv.scrollTop = messagesDiv.scrollHeight;
    
    messageHistory.push({ 
      sender: isUser ? 'user' : 'ai', 
      text: text.replace(/<br>/g, '\n') 
    });
    
    if (messageHistory.length > 20) {
      messageHistory = messageHistory.slice(-20);
    }
    
    return messageDiv;
  }
  
  function showTyping() {
    if (typingIndicator) {
      typingIndicator.style.display = 'block';
      messagesDiv.scrollTop = messagesDiv.scrollHeight;
    }
  }
  
  async function typeMessage(sender, text) {
    const messageDiv = document.createElement('div');
    messageDiv.className = `elitizaai-message ${sender}`;
    const contentDiv = document.createElement('div');
    contentDiv.className = 'elitizaai-message-content';
    messageDiv.appendChild(contentDiv);
    messagesDiv.appendChild(messageDiv);
    if (sender === 'ai') {
      text = processMarkdown(text);
      text = processLinks(text);
    }
    const processedText = text.replace(/\n/g, '<br>');
    let currentText = '';
    const words = processedText.split(' ');
    for (let i = 0; i < words.length; i++) {
      currentText += (i > 0 ? ' ' : '') + words[i];
      contentDiv.innerHTML = currentText;
      messagesDiv.scrollTop = messagesDiv.scrollHeight;
      await new Promise(resolve => setTimeout(resolve, 30));
    }
    messageHistory.push({ sender, text: text });
    if (messageHistory.length > 20) {
      messageHistory = messageHistory.slice(-20);
    }
  }
  
  async function sendMessage(retryCount = 0) {
    const message = input.value.trim();
    if (!message || isWaitingResponse) return;
    
    if (!currentUsername) {
      currentUsername = getUsernameFromForum();
    }
    
    const username = getCookie('user_field_1_7') || currentUsername;
    
    if (!username || username === 'Anonymous' || username.toLowerCase() === 'anonymous') {
      addMessage('‚ö†Ô∏è Voc√™ precisa estar logado para usar o chatbot!', false);
      return;
    }
    
    addMessage(message, true);
    input.value = '';
    adjustTextareaHeight();
    
    isWaitingResponse = true;
    sendBtn.disabled = true;
    sendBtn.textContent = '...';
    showTyping();
    
    try {
      const controller = new AbortController();
      const timeoutId = setTimeout(() => controller.abort(), API_CONFIG.TIMEOUT);
      
      const formattedHistory = messageHistory.slice(-10).map(msg => ({
        role: msg.sender === 'user' ? 'user' : 'assistant',
        content: msg.text
      }));
      
      const response = await fetch(API_CONFIG.API_URL, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          question: message,
          username: username,
          history: formattedHistory
        }),
        signal: controller.signal
      });
      
      clearTimeout(timeoutId);
      
      const data = await response.json();
      
      if (typingIndicator) {
        typingIndicator.style.display = 'none';
      }
    
      if (data.error) {
        addMessage(`‚ùå ${data.error}`, false);
        return;
      }
      
      if (!response.ok) {
        if (response.status === 429) {
          addMessage('‚ùå Voc√™ est√° fazendo perguntas muito r√°pido. Aguarde um momento.', false);
        } else if (response.status === 403) {
          addMessage('‚ùå Voc√™ foi bloqueado temporariamente. Entre em contato com um Administrador se achar que isso √© um erro.', false);
        } else {
          addMessage(`‚ùå Erro na resposta: ${response.status}`, false);
        }
        return;
      }
      
      if (data.answer) {
        await typeMessage('ai', data.answer);
      } else {
        addMessage('‚ùå Resposta inv√°lida do servidor', false);
      }
      
    } catch (error) {
      if (typingIndicator) {
        typingIndicator.style.display = 'none';
      }
      
      if (error.name === 'AbortError') {
        if (retryCount < API_CONFIG.RETRY_ATTEMPTS) {
          addMessage(`‚è±Ô∏è Tempo esgotado. Tentando novamente... (${retryCount + 1}/${API_CONFIG.RETRY_ATTEMPTS})`, false);
          await new Promise(resolve => setTimeout(resolve, API_CONFIG.RETRY_DELAY));
          return sendMessage(retryCount + 1);
        } else {
          addMessage('‚ùå Tempo limite excedido. Tente novamente mais tarde.', false);
        }
      } else {
        const errorMessage = error.message || 'Erro desconhecido ao processar sua mensagem';
        addMessage(`‚ùå ${errorMessage}`, false);
      }
    } finally {
      isWaitingResponse = false;
      sendBtn.disabled = false;
      sendBtn.textContent = 'Enviar';
      input.focus();
    }
  }
  
  toggle.addEventListener('click', (e) => {
    e.preventDefault();
    e.stopPropagation();
    
    const tooltip = document.getElementById('elitizaai-chatbot-tooltip');
    if (tooltip && !tooltip.classList.contains('fade-out')) {
      tooltip.classList.add('fade-out');
      setTimeout(() => {
        tooltip.style.display = 'none';
      }, 400);
    }
    
    isOpen = !isOpen;
    
    if (isOpen) {
      const toggleImg = toggle.querySelector('img');
      toggle.classList.remove('halloween-mode');
      toggleImg.src = normalImage;
      toggleImg.classList.remove('halloween-logo');
      toggleImg.classList.add('normal-logo');
      isHalloweenMode = false;
      
      if (!currentUsername) {
        currentUsername = getUsernameFromForum();
        updateWelcomeMessage();
      }
      container.classList.add('show');
      toggle.classList.add('hidden');
      setTimeout(() => input && input.focus(), 100);
    } else {
      container.classList.remove('show');
      toggle.classList.remove('hidden');
    }
  });
  
  closeBtn.addEventListener('click', () => {
    isOpen = false;
    container.classList.remove('show');
    toggle.classList.remove('hidden');
  });
  
  sendBtn.addEventListener('click', sendMessage);
  
  input.addEventListener('keypress', (e) => {
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault();
      sendMessage();
    }
  });
  
  input.addEventListener('input', adjustTextareaHeight);
  
  document.addEventListener('click', (e) => {
    if (isOpen && !container.contains(e.target) && e.target !== toggle) {
      isOpen = false;
      container.classList.remove('show');
      toggle.classList.remove('hidden');
    }
  });
  
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && isOpen) {
      isOpen = false;
      container.classList.remove('show');
      toggle.classList.remove('hidden');
    }
  });
  
  function showTooltip() {
    const tooltip = document.getElementById('elitizaai-chatbot-tooltip');
    if (tooltip) {
      setTimeout(() => {
        tooltip.classList.add('show');
      }, 1000);
      setTimeout(() => {
        tooltip.classList.add('fade-out');
        setTimeout(() => {
          tooltip.style.display = 'none';
        }, 400);
      }, 11000);
    }
  }
  
  showTooltip();
  
  let touchStartY = 0;
  let touchEndY = 0;
  
  messagesDiv.addEventListener('touchstart', (e) => {
    touchStartY = e.changedTouches[0].screenY;
  }, { passive: true });
  
  messagesDiv.addEventListener('touchend', (e) => {
    touchEndY = e.changedTouches[0].screenY;
    handleSwipe();
  }, { passive: true });
  
  function handleSwipe() {
    if (touchStartY - touchEndY > 50 && messagesDiv.scrollTop === 0) {
      messagesDiv.scrollTop = 0;
    }
  }
})();
